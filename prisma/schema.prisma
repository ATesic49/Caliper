generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Galerija{
  id Int @id @default(autoincrement())
  image String
  name String @unique
  description String
  boje String[]

}

model User{
  id Int @id @default(autoincrement())
  image String
  name String 
  email String @unique

}


model Rucice{
  id Int @id @default(autoincrement())
  image String
  name String 
  cena Int
  materijal_id Int
  opis String
  model Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  slug String @unique
  materijal Materijal @relation(fields: [materijal_id],references: [id])
  dimenzije String
  rucicaMaterijal RuciceMaterijal[]

}

model Materijal{
id  Int @id @default(autoincrement())
name String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  description String
  rucice Rucice[]
  hex String
  rucicaMaterijal RuciceMaterijal[]

}

model RuciceMaterijal{
  materijalId Int
  materijal Materijal @relation(fields: [materijalId],references: [id])
  rucica Rucice @relation(fields: [rucicaId],references: [id])
  rucicaId Int
  @@id([rucicaId,materijalId])
}