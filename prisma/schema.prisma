generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Galerija{
  id Int @id @default(autoincrement())
  image String
  name String @unique
  description String
  boje String[]

}

model UserCaliper{
  id Int @id @default(autoincrement())
  image String
  name String 
  email String @unique

}

